<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cloud_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/cloud_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cloud_image"
        android:layout_toRightOf="@+id/cloud_image"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Cloud Name" />

    <TextView
        android:id="@+id/cloud_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloud_name"
        android:layout_toEndOf="@+id/cloud_image"
        android:layout_toRightOf="@+id/cloud_image"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="Description:" />

    <TextView
        android:id="@+id/cloud_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Rating:"
        android:layout_below="@+id/cloud_description"
        android:layout_alignStart="@+id/cloud_description"
        android:layout_alignLeft="@+id/cloud_description" />



    <Button
        android:id="@+id/sell_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cloud_description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/sell_item" />
</RelativeLayout>